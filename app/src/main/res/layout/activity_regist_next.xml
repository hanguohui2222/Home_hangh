<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ebebeb"
              android:orientation="vertical">

    <com.hangh.home.ui.widget.Topbar
        android:id="@+id/regist_topbar"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@color/blue_light"
        app:left_src="@mipmap/return_white"
        app:title_text="完善资料"
        app:title_text_color="@color/white"
        app:title_text_size="16sp"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="12dp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="#fff"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_accid"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text="乡吧号"
                android:textColor="#353535"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/et_accid"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:background="@drawable/btn_list_item_bg"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:gravity="center_vertical"
                android:hint="用于登录，支持英文和数字"
                android:maxLines="1"
                android:paddingLeft="10dp"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp"
                />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#fff">

            <ImageView
                android:id="@+id/iv_select_photo"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/grid_camera"/>

            <EditText
                android:id="@+id/et_usernick"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="12dp"
                android:layout_toLeftOf="@id/iv_select_photo"
                android:background="@drawable/btn_list_item_bg"
                android:gravity="center_vertical"
                android:hint="如：王小二"
                android:maxLines="1"
                android:paddingLeft="68dp"
                android:textColorHint="#DDDDDD"
                android:textSize="16sp"
                />

            <TextView
                android:id="@+id/tv_usernick"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignLeft="@id/et_usernick"
                android:layout_alignParentBottom="true"
                android:gravity="center_vertical"
                android:text="昵称"
                android:textColor="#353535"
                android:textSize="16sp"/>
        </RelativeLayout>


        <Button
            android:id="@+id/btn_register"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginTop="64dp"
            android:background="@drawable/btn_bg_corner_blue"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:text="完成注册"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="注册资料不可更改，请认真填写"
            android:textColor="@color/text0"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
